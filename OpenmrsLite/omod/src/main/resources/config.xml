<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>${project.parent.groupId}.${project.parent.artifactId}</package>
	<author>shubham</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf</updateURL>
	<require_version>${openMRSVersion}</require_version>
	<!-- / Module Properties -->

	
	<!-- Required Modules -->
	<require_modules>
																
			
		<require_module>
		    org.openmrs.module.uiframework
		</require_module>
	 
		 <require_module>
	                org.openmrs.module.appframework
	         </require_module>

		 <require_module version="${uicommonsVersion}">
		       org.openmrs.module.uicommons
		  </require_module>


		  <require_module version="${appuiVersion}">
		       org.openmrs.module.appui
		   </require_module>

		   <require_module version="${htmlformentryVersion}">
		        org.openmrs.module.htmlformentry
		    </require_module>
		     
		    <require_module version="${htmlformentryuiVersion}">
		        org.openmrs.module.htmlformentryui
		    </require_module>


	
	</require_modules>
	<!-- / Required Modules -->
	
	<!-- Module Activator -->
	<activator>${project.parent.groupId}.${project.parent.artifactId}.OpenmrsLiteActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

	<privilege>
	        <name>App: OpenmrsLite.vitals</name>
	        <description>Able to access the vitals app</description>
	 </privilege>
	   
	  <privilege>
	        <name>App: OpenmrsLite.legacyAdmin</name>
	        <description>Able to access the advanced administration app</description>
         </privilege>
 
         <privilege>
                 <name>App: OpenmrsLite.styleGuide</name>
                 <description>Able to access the style guide app</description>
         </privilege>


</module>

